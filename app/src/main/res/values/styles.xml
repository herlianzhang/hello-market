<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.HelloMarket.BigTitle">
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@color/green_700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultButton">
        <item name="android:background">@drawable/rounded_button_with_shadow</item>
        <item name="android:elevation">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultToolbarBackButton">
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:background">@drawable/rounded_icon_button</item>
        <item name="android:tint">@color/white</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="DefaultToolbarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/green_700</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>